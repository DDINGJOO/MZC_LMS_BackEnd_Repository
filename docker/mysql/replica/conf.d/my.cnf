[mysqld]
# Server ID for replication
server-id = 2

# Relay log for replication
relay-log = mysql-relay-bin
log-bin = mysql-bin
binlog-format = ROW

# Read-only mode (slave)
read-only = 1
super-read-only = 1

# Character set
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Performance tuning
max_connections = 200
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M
